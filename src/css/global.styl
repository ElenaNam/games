html, body
	margin 0
	padding 0
	box-sizing border-box
	height 100%

body
	font-family 'Montserrat', sans-serif
	font-size 10px

ul
	padding-left 0

li
	list-style none

.page-wrapper
	display flex
	flex-direction: column
	justify-content space-between
	//align-items stretch
	height: 100%
	min-height: 100%

.section-wrapper
	width 1150px
	margin: 0 auto
	padding 25px

h1
	font-size 36px
	line-height 1.5

.hide
	display none
	visibility hidden
	opacity 0
